<AnchorPane prefHeight="522.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RegisterController">
   <children>
      <AnchorPane prefHeight="92.0" prefWidth="600.0" style="-fx-background-color: ffd966;">
         <children>
            <Label layoutX="121.0" layoutY="13.0" prefHeight="50.0" prefWidth="370.0" text="User Registration" textFill="WHITE">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <TextField fx:id="firstnameTextField" layoutX="122.0" layoutY="120.0" prefHeight="26.0" prefWidth="342.0" promptText="Firstname" />
      <TextField fx:id="lastnameTextField" layoutX="122.0" layoutY="164.0" prefHeight="26.0" prefWidth="342.0" promptText="Lastname" />
      <TextField fx:id="usenameTextField" layoutX="122.0" layoutY="209.0" prefHeight="26.0" prefWidth="342.0" promptText="username" />
      <Button fx:id="registerButton" layoutX="122.0" layoutY="342.0" mnemonicParsing="false" onAction="#registerButtonOnAction" prefHeight="59.0" prefWidth="342.0" style="-fx-background-color: lightblue;" text="Register" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" layoutX="122.0" layoutY="426.0" mnemonicParsing="false" onAction="#closeButtonAction" prefHeight="59.0" prefWidth="342.0" style="-fx-background-color: lightblue;" text="Cancel" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <Label fx:id="registrationMessageLabel" layoutX="121.0" layoutY="92.0" prefHeight="18.0" prefWidth="342.0" />
      <Label fx:id="confirmPasswordLabel" layoutX="310.0" layoutY="280.0" prefHeight="18.0" prefWidth="203.0" textFill="RED" />
      <PasswordField fx:id="setPasswordField" layoutX="121.0" layoutY="253.0" prefHeight="26.0" prefWidth="342.0" promptText="Password" />
      <PasswordField fx:id="confirmPasswordField" layoutX="122.0" layoutY="298.0" prefHeight="26.0" prefWidth="342.0" promptText="Confirm Password" />
   </children>
</AnchorPane>
